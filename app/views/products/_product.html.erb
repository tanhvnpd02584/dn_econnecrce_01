<div class="col-lg-4 col-md-6">
  <div class="single-product">
    <div class="product-img">
      <% if product.image.attached? %>
      <%= image_tag(product.image, class: "card-img") %>
      <% end %>
    </div>
    <div class="product-btm">
      <%= link_to product_path(product.id),class: "d-block", id: product.id do %>
      <h4> <%= product.name %></h4>
      <% end %>
    </div>
    <div class="mt-3">
      <span class="mr-4"><%= number_to_currency(product.unit_price) %>
        <%= t "products.product_price" %>
      </span>
      <%= link_to t("products_user.text_btn_add"), cart_add_item_path(product.id), method: :post, class: "main_btn" %>
    </div>
  </div>
</div>
